{
  "name": "@keycast/client",
  "version": "0.1.0",
  "description": "TypeScript client for Keycast OAuth and Nostr RPC API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "biome check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "keycast",
    "nostr",
    "nip-46",
    "oauth",
    "remote-signing"
  ],
  "author": "Divine",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "nostr-tools": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "nostr-tools": {
      "optional": true
    }
  }
}
